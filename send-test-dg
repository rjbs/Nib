#!/bin/env perl
use v5.38.0;

use IO::Socket::IP;

my $bytes = join q{}, map { chr oct "0b$_" } qw(
  00000000
  00000001
  01010111
  10111000
  01000100
  00100110
  11000111
);

my $sock = IO::Socket::IP->new(
  PeerHost  => '192.168.1.169',
  PeerPort  => 9991,
  Proto     => 'udp'
) or die "socket fail: $@";

$sock->send($bytes);
